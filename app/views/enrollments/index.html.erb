<h1><%= "#{pluralize(@enrollments.count, "enrollment")}" %></h1>

<div class="widetable">
    <table id="enrollments" class="ptrAppTable table table-striped table-bordered">
        <thead>
            <tr>
                <td>Enrollment ID</td>
                <td>Student</td>
                <td>Class</td>
            </tr>
        </thead>
        <tbody>
    
        <% @enrollments.each do |e| %>
            <tr>
                <td><%= e.id %></td>
                <td><%= link_to "#{e.student.first_name} #{e.student.last_name}", student_url(e.student_id) %></td>
                <td><%= link_to e.course.name, course_url(e.course_id) %></td>
            </tr>
        <% end %>
    
        </tbody>
    </table>
</div>

<br>

<%= link_to('New Enrollment', new_enrollment_path) %>
