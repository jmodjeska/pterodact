<% content_for :title, "Students" %>

<h1><%= "#{pluralize(@students.count, "student")}" %></h1>

<div class="widetable">
    <table id="students" class="ptrAppTable table table-striped table-bordered">
        <thead>
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Title</td>
                <td>Department</td>
                <td>Mozzer ID</td>
            </tr>
        </thead>
        <tbody>
    
        <% @students.each do |s| %>
            <tr>
                <td><%= link_to "#{s.first_name}", student_url(s) %></td>
                <td><%= link_to "#{s.last_name}", student_url(s) %></td>
                <td><%= s.title %></td>            
                <td><%= s.department %></td>            
                <td><%= s.moz_number %></td>            
            </tr>
        <% end %>
    
        </tbody>
    </table>
</div>

<br>

<%= link_to('New Student', new_student_path) %>