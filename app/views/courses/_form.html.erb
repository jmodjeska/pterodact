<div class="row">
  <div class="col-md-4">

    <%= form_for @course do |f| %>
      <%= render 'shared/errors', object: @course %>
      <fieldset>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control"  %>
        </div>
    
        <div class="form-group">
            <%= f.label :catalog %>
            <%= f.text_field :catalog, class: "form-control"  %>
        </div>
    
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control"  %>
        </div>

        <div class="form-group">
            <%= f.label :size, 'Capacity' %>
            <%= f.text_field :size, class: "form-control"  %>
        </div>
    
        <br>
    
        <%= f.submit nil, class: 'btn btn-primary' %>
    
      </fieldset>
    <% end %>

  </div>
</div>