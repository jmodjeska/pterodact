<div class="row">
  <div class="col-md-5">

    <%= form_for([@course, @offer_date]) do |f| %>
      <%= render 'shared/errors', object: @offer_date %>
      <fieldset>

        <div class="form group">
            <%= f.label :date, 'Date (Pacific Time)', class: "form-control-date" %>
            <%= f.datetime_select :date %>
            <br><br>
        </div>

        <div class="form group">
            <%= f.label :size, 'Capacity' %>
            <%= f.text_field :size, class: "form-control" %>
        </div>

        <br>

        <%= f.submit class: 'btn btn-primary' %>

      </fieldset>
    <% end %>

  </div>
</div>
