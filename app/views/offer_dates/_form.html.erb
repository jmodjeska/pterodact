<div class="row">
  <div class="col-md-4">

    <%= form_for([@course, @offer_date]) do |f| %>
      <%= render 'shared/errors', object: @offer_date %>
      <fieldset>
        <div class="form-group">
            <%= f.label :date %>
            <%= f.text_field :date, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :size, 'Capacity' %>
            <%= f.text_field :size, class: "form-control" %>
        </div>
    
        <%= f.submit 'Create Offer Date', class: 'btn btn-primary' %>
    
      </fieldset>
    <% end %>

  </div>
</div>
