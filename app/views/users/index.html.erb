<% content_for :title, "Users" %>

<div class="page-header">
  <h1><%= "#{pluralize(@users.count, "user")}" %></h1>
</div>

<%= link_to new_user_path do %>
  <h5><i class="fa fa-plus-circle"></i> Add an New User</h5>
<% end %>

<div class="widetable">
  <table id="users" class="ptrAppTable table table-striped table-bordered">
    <thead>
      <tr>
        <td>Name</td>
        <td>Email</td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.name}", user_url(user) %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
